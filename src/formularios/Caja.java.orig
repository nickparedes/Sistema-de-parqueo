    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
         ReporteMes rm = new ReporteMes ();
        ReportePago boletas[] = new ReportePago[0];
        String fecha = null;
        int mes = 0,anio = 0;
            boolean bandera = true;
            String palabra[]=new String[2];
            int j;             
            j=0;     
            fecha = JOptionPane.showInputDialog("Introduzca FECHA (mes/anio) ");
            try{    
                
                
                        //StringTokenizer nos ayudar a separar una cadena en varias partes segun la condicion en en su segundo argumento
                StringTokenizer parti=new StringTokenizer(fecha,"/");

                    //Sirve para verificar si existe elementos en la cadena segun la condicion establecida en el segundo argumento
                while(parti.hasMoreElements()){ 
                    if(j>=2){
                        throw new FechaException();
                    } 
                     palabra[j]=parti.nextToken();
                    j++;  
                }

                        //Integer.parseInt sirve para convertir una cadena a un numero del tipo "entero"
                mes=Integer.parseInt(palabra[0]);
                anio=Integer.parseInt(palabra[1]);

                        //llamamos al mento calculo de la clase "CalculaFecha"
                calculoMes(mes,anio);

                bandera=true;    
                }
                    //Si no se cumple ninguna excepcion anterior pero hay un error detectado este catch nos ayudara a visualizar el error
                catch(FechaException e){
                    JOptionPane.showMessageDialog(null, "La Fecha Ingresada NO EXISTE");  
                    bandera=false;
                } 
                catch(NullPointerException a){
                    
                    bandera=false;
                }
                catch(NumberFormatException e){
                    JOptionPane.showMessageDialog(null, "Error de formato de la fecha");  
                    bandera=false;
                 }
    
        String matriz [][] = new String [cantBoletasM(mes,anio)][5];
        
            
        try
        {
            FileInputStream fis=new FileInputStream("Boletas1.txt");
            ObjectInputStream H=new ObjectInputStream(fis);
            boletas=(ReportePago[])H.readObject();
            
            
        }catch(Exception e)
        {
            JOptionPane.showMessageDialog(null,"Error al abrir archivo o crearlo");

        }
        int f=0;
        if(bandera==true){
            for(int i=0;i<boletas.length;i++){
                if((boletas[i].getAnio_Salida()==anio && boletas[i].getMes_Salida() == mes) ){
                    String fechaT =boletas[i].getDia_Salida()+" / "+boletas[i].getMes_Salida()+" / "+boletas[i].getAnio_Salida();
                    String cod="000"+boletas[i].getCodigoBoleta();
                    matriz [f][0]=cod;
                    matriz [f][1]=boletas[i].getTicket().apellido() +" "+boletas[i].getTicket().nombre() ;
                    matriz [f][2]=boletas[i].getTicket().placa();
                    matriz [f][3]=fechaT;
                    matriz [f][4]=boletas[i].pago();      
                    f++;
             
                }
                 
        }

        rm.setMontoMes(acumuladoMes(mes,anio));
        rm.mostrar(matriz);
        
        rm.setVisible(true);
    }
    }//GEN-LAST:event_jButton2ActionPerformed

